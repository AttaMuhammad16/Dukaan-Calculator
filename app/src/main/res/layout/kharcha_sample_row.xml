<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/dateAndTotalLinear"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:text="20"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/todayOrYesterdayTv"
                    android:layout_width="wrap_content"
                    android:text="Today"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/monthYearTv"
                    android:layout_width="wrap_content"
                    android:text="May 2024"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/todayAndYesterdayExpenseTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Rs5000"
            android:textColor="@color/dark_red"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/colorOftheView"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/red" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:text="fuel" />

                <TextView
                    android:id="@+id/noteTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:text="note" />


                <TextView
                    android:id="@+id/shopOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/dark_gray"
                    android:text="Atta Muhammad" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/light_red"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/expenseTv"
                    android:layout_width="match_parent"
                    android:text=""
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#BC0C0C"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>