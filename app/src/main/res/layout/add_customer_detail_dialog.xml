<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:strokeColor="@color/copper"
        app:strokeWidth="1dp"
        android:backgroundTint="@color/copper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_13sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="Enter Details"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_18sdp"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <AutoCompleteTextView
                android:id="@+id/customerNameEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_edt_background"
                android:hint="Enter Name"
                android:padding="@dimen/_7sdp"
                android:paddingStart="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/phoneNumberEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_edt_background"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="phone"
                android:hint="Enter PhoneNumber (+92303.......)"
                android:padding="@dimen/_7sdp"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/white"
                    app:cornerRadius="@dimen/_4sdp"
                    android:backgroundTint="@color/dark_gray"
                    android:text="Cancel" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="@dimen/_4sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/mint_green"
                    android:textColor="@color/black"
                    android:text="Save" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>