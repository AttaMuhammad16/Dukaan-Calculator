<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_89sdp"
    android:backgroundTint="@color/white"
    android:layout_margin="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingStart="@dimen/_10sdp"
                android:fontFamily="@font/roboto"
                android:text="Item Name"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="Price"
                android:layout_weight=".2"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/roboto" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="Quantity"
                android:textColor="@color/dark_gray"
                android:layout_weight=".3"
                android:fontFamily="@font/roboto" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:fontFamily="@font/roboto"
                android:text="Total"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/productNameEdt"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_weight="1.5"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="No Name"
                android:textSize="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/priceEdt"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:fontFamily="@font/roboto"
                android:hint="Price"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColorHint="@color/black"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="@dimen/_1sdp"
                android:background="@color/black"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/decrementImg"
                android:layout_width="@dimen/_15sdp"
                android:src="@drawable/baseline_minimize_24"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_gravity="center_vertical"
                app:tint="@color/dark_gray" />
            <EditText
                android:id="@+id/quantityEdt"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:hint="Quantity"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/incrementImg"
                android:layout_width="@dimen/_15sdp"
                android:src="@drawable/baseline_add_24"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_vertical|center"
                app:tint="@color/dark_gray" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".6"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>