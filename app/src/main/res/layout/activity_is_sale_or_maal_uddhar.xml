<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    tools:context=".ui.activities.reports.IsSaleOrMaalUddharActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tool_bar_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Dukaan Calculator"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/support"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/support" />
            <ImageView
                android:id="@+id/shareImg"
                android:layout_width="@dimen/_25sdp"
                android:src="@drawable/share_img"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_25sdp"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar">

        <androidx.cardview.widget.CardView
            android:id="@+id/saleUddhar"
            android:layout_width="0dp"
            android:layout_height="@dimen/_65sdp"
            android:layout_margin="@dimen/_5sdp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1"
            android:backgroundTint="@color/mint_green"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="Udhaar Dya Gaya\n(Sale)"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/maalUddhar"
            android:layout_width="0dp"
            android:layout_height="@dimen/_65sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/mint_green"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_semibold"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="Udhaar lya gaya\n(Maal)"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>